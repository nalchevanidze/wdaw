{
  "compilerOptions": {
    "module": "ES2022",
    "strict": true,
    "target": "ES5",
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 0,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["ES2024", "dom"],
    "types": ["@types/jest", "@types/react"]
  },
  "exclude": ["node_modules"]
}
